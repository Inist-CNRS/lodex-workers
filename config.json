{
	"environnement": {
		"EZS_TITLE": "lodex-workers",
		"EZS_DESCRIPTION": "web services for Lodex",
		"EZS_METRICS": true,
		"EZS_CONCURRENCY": 4,
		"EZS_NSHARDS": 32,
		"EZS_CACHE": true,
		"CRON_VERBOSE": false,
		"NODE_OPTIONS": "--max_old_space_size=1024",
		"NODE_ENV": "production",
		"GIT_REPOSITORY": "https://github.com/Inist-CNRS/lodex-extented",
		"GIT_BRANCH": "v6.10.0",
		"GIT_DIRECTORY": "public/webservices"
	},
	"tasks": [
		{
            "#Disabled when": "30 * * * *",
            "#Disabled execute": "/app/gitsync $GIT_REPOSITORY $GIT_BRANCH"
        },
		{
            "when": "0 0 0 31 1 *",
            "execute": "/app/gitsyncdir $GIT_REPOSITORY $GIT_BRANCH $GIT_DIRECTORY "
        }
	]
}
